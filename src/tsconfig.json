{
  "compilerOptions": {
    // To target es6 may need to switch `XXX extends YYY` to (<any>YYY).extend(...
    // "outDir": "../dist",
    "target": "ES2017",
    // "module": "CommonJS",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "sourceMap": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
//    "noUnusedLocals": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false // TODO
  },
  "include": [
    // refs
    "node_modules/@nativescript/types-android/lib/android-28.d.ts",
    "node_modules/@nativescript/types-ios/index.d.ts",
    "typings/*",
    // srcs
    "index.ts",
    "**/*.android.ts",
    "**/*.ios.ts",
    "**/*.common.ts"
  ],
  "compileOnSave": false
}

